{
    "name": "casdorio/annotation-router",
    "description": "A library to enable route annotations in CodeIgniter 4",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Casdorio\\AnnotationRouter\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3|^8.0",
        "codeigniter4/framework": "^4.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "casdorio",
            "email": "casdorio@gmail.com"
        }
    ],
    "require-dev": {
        "codeigniter4/devkit": "^1.2",
        "phpunit/phpunit": "^10.5"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff"
    }
}
